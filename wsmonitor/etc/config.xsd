<xsd:schema
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://java.sun.com/xml/ns/jax-ws/ri/config/monitor"
    xmlns:tns="http://java.sun.com/xml/ns/jaxwsa/ri/w3c/interop"
    elementFormDefault="unqualified"
    attributeFormDefault="unqualified"
    version="1.0">

    <xsd:element name="monitor">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="connection" type="tns:connection" minOccurs="1" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:complexType name="connection">
        <xsd:attribute name="name" type="xsd:string" use="required"/>
        <xsd:attribute name="description" type="xsd:string" use="optional" default=""/>
        <xsd:attribute name="listenPort" type="xsd:string" use="required"/>
        <xsd:attribute name="targetHost" type="xsd:string" use="optional" default="localhost"/>
        <xsd:attribute name="targetPort" type="xsd:string" use="required"/>
    </xsd:complexType>

</xsd:schema>

